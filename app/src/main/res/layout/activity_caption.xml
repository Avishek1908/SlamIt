<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhargavbv.ureon.UploadVideo.CaptionActivity">

    <ImageView
        android:id="@+id/ivthumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#90CAF9"

     />
    <EditText
        android:id="@+id/etcaptions"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginLeft="160dp"
        android:hint="Write a Caption..."
        android:textSize="18dp"
        android:textColor="#757575"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose your category :-"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@id/ivthumbnail"
        android:layout_marginTop="15dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivthumbnail"
        android:layout_marginTop="55dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:id="@+id/sports"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dance"
            android:id="@+id/dance"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:id="@+id/music"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rap Battle"
            android:id="@+id/rap"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Challenges"
            android:id="@+id/quick"/>

    </RadioGroup>
    <Button
        android:id="@+id/slamit"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="#D32F2F"
        android:text="#SLAM IT"
        android:textSize="34dp" />






</RelativeLayout>
